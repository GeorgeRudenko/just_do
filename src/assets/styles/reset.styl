// Import
@import '~@/assets/styles/base.styl'

//  Global rules
*
  font-family Avenir, Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  margin 0
  padding 0
  box-sizing border-box
// Body
body
  max-width 100vw
  width 100%
  padding-top $size_header
  background-color $color_app_black
  display flex
  flex-direction column
  justify-content flex-start
  align-items center
  overflow-x hidden
  &.view_control_panel
    padding-left 280px
// Link, button
a, button
  border none
  outline none
  box-shadow none
  text-decoration none
  cursor pointer
// Input, textarea
input, textarea
  outline none
  box-shadow none
